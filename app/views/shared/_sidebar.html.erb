<div class="sidebar-content">
  <h2>Rooms</h2>
  <hr>
  <div class="sidebar-list">
    <% rooms.each do |room| %>
      <% if room.open %>
        <%= link_to room.name, room_path(room), class: "sidebar-element", data: { turbo_frame: "_top" } %>
      <% else %>
        <div class="sidebar-element sidebar-locked"> <%= room.name %> </div>
      <% end %>
    <% end %>
  </div>
</div>
