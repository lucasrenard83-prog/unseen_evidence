<%= turbo_frame_tag dom_id(message) do %>
  <% if message.role == "user" %>
    <div class="message-user mb-2 px-3 pb-0 pt-3">
      <%= simple_format(message.content) %>
    </div>
  <% else %>
    <div class="message-ai mb-2 px-3 pb-0 pt-3 d-flex justify-content-between align-items-start" data-controller="tts">
      <div class="message-body flex-grow-1">
        <%= simple_format(message.content) %>
        <button
          type="button"
          class="btn btn-sm btn-outline-light message-play ms-2"
          data-action="click->tts#play"
          data-tts-url-value="<%= tts_game_message_path(message.game, message) %>">
          â–¶
        </button>
      </div>
    </div>
  <% end %>
<% end %>
