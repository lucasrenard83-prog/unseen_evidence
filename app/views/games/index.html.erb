<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">My Games</h1>
  </div>

  <% if @games.any? %>
    <div class="row g-4">
      <% @games.each do |game| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-1">
                Game #<%= game.id %>
              </h5>

              <p class="text-muted mb-3">
                Started on <%= l(game.created_at, format: :short) %>
              </p>

              <ul class="list-unstyled mb-4">
                <li>
                  <% if game.rooms.where(open: false).count>1  %>
                  <strong><%= game.rooms.where(open: false).count %></strong>
                  closed rooms remaining
                  <% else %>
                  <strong><%= game.rooms.where(open: false).count %></strong>
                  closed room remaining
                  <% end %>
                </li>
                <li>
                  <% if game.items.where(found: false).count>1  %>
                  <strong><%= game.items.where(found: false).count %></strong>
                  objects left to find
                  <% else %>
                  <strong><%= game.items.where(found: false).count %></strong>
                  object left to find
                  <% end %>
                </li>
              </ul>

              <div class="mt-auto d-flex gap-2">
                <% hall = game.rooms.find_by(name:"Hall") %>
                <%= link_to "Continue", room_path(hall), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Delete", game_path(game),
                            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                            class: "btn btn-sm btn-outline-danger" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= button_to '<svg xmlns="http://www.w3.org/2000/svg" width="96" height="50" viewBox="0 0 24 24">
	<path fill="#FFD700" d="M2.185 6.758c-1.495 0-2.193.849-2.193 2.171v1.534c0 1.373.246 1.959 1.235 2.58l.763.474c.618.374.698.651.698 1.453v1.354c0 .393-.18.636-.521.636c-.342 0-.522-.228-.522-.636v-2.125H-.008v2.14c0 1.338.683 2.17 2.159 2.17c1.526 0 2.224-.882 2.224-2.17v-1.666c0-1.272-.326-1.927-1.265-2.529l-.763-.49c-.537-.342-.668-.586-.668-1.469v-1.24c0-.394.18-.637.503-.637c.341 0 .537.247.537.636v2.105h1.656V8.93c0-1.307-.698-2.17-2.19-2.17m2.711.162v1.635h1.17v9.797h1.687V8.555h1.17V6.92zm5.066 0l-.943 11.427h1.672l.23-3.053h1.227l.23 3.053h1.706l-.94-11.427Zm4.985 0v11.427h1.687v-4.78h1.024v3.917c0 .652.276.863.276.863h1.687c.004.004-.272-.207-.272-.863v-2.972c0-.949-.357-1.47-1.22-1.65v-.197c.86-.131 1.3-.768 1.3-1.797V8.929c0-1.257-.747-2.009-2.193-2.009zm5.02 0v1.635h1.169v9.797h1.687V8.555h1.17V6.92zm-8.529 1.55h.2l.399 5.274h-.997zm5.2.004h.437c.522 0 .667.212.667 1.06v1.419c0 .817-.18 1.06-.732 1.06h-.372z" />
</svg>'.html_safe, games_path, method: :post, class:"purple-btn" %>
    </div>
  <% else %>

      You donâ€™t have any games yet.
      <%= button_to "Start a new one", games_path, method: :post, class: "alert-link" %>.
  <% end %>
</div>
