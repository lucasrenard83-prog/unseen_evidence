<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">My Games</h1>
  </div>

  <% if @games.any? %>
    <div class="row g-4">
      <% @games.each do |game| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-1">
                Game #<%= game.id %>
              </h5>

              <p class="text-muted mb-3">
                Started on <%= l(game.created_at, format: :short) %>
              </p>

              <ul class="list-unstyled mb-4">
                <li>
                  <% if game.rooms.where(open: false).count>1  %>
                  <strong><%= game.rooms.where(open: false).count %></strong>
                  closed rooms remaining
                  <% else %>
                  <strong><%= game.rooms.where(open: false).count %></strong>
                  closed room remaining
                  <% end %>
                </li>
                <li>
                  <% if game.items.where(found: false).count>1  %>
                  <strong><%= game.items.where(found: false).count %></strong>
                  objects left to find
                  <% else %>
                  <strong><%= game.items.where(found: false).count %></strong>
                  object left to find
                  <% end %>
                </li>
              </ul>

              <div class="mt-auto d-flex gap-2">
                <% hall = game.rooms.find_by(name:"Hall") %>
                <%= link_to "Continue", room_path(hall), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Delete", game_path(game),
                            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                            class: "btn btn-sm btn-outline-danger" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= button_to "Start New Game", games_path, method: :post, class:"purple-btn" %>
    </div>
  <% else %>

      You donâ€™t have any games yet.
      <%= button_to "Start a new one", games_path, method: :post, class: "alert-link" %>.
  <% end %>
</div>
